{
    "name": "darkraul79/cartify",
    "description": "A flexible and powerful shopping cart package for Laravel applications",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "cart",
        "shopping-cart",
        "e-commerce",
        "orders",
        "checkout",
        "cartify"
    ],
    "authors": [
        {
            "name": "Raul Sebastian",
            "email": "darkraul79@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/contracts": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Darkraul79\\Cartify\\": "src/"
        },
        "files": [
            "src/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Darkraul79\\Cartify\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Darkraul79\\Cartify\\CartifyServiceProvider"
            ],
            "aliases": {
                "Cart": "Darkraul79\\Cartify\\Facades\\Cart"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
